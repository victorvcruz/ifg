  "components": {
    "schemas": {
      "AddSchedulerSmsWithTemplateRequestDto": {
        "required": [
          "callback",
          "destination",
          "priority",
          "schedulerTo",
          "templateId"
        ],
        "type": "object",
        "properties": {
          "destination": {
            "type": "string",
            "description": "Destino da mensagem (telefone contendo apenas números incluindo DDI e DDD. Exemplo: +5511999999999 (DDI + DDD + número))",
            "example": "+5511999999999"
          },
          "templateId": {
            "type": "string",
            "description": "Identificador do template da mensagem",
            "example": "64f7f5a1e19f8e1f8e7c8b3e"
          },
          "placeholders": {
            "type": "object",
            "additionalProperties": {
              "type": "string",
              "nullable": true
            },
            "description": "Informações das variáveis utilizadas pelo template (opcional)",
            "example": {
              "name": "João da Silva"
            }
          },
          "callback": {
            "type": "boolean",
            "description": "Indica se um callback será utilizado",
            "example": false
          },
          "priority": {
            "type": "string",
            "description": "Prioridade da mensagem: low, medium ou high",
            "example": "high"
          },
          "schedulerTo": {
            "type": "string",
            "description": "Horário de agendamento da mensagem no formato yyyy-MM-ddTHH:mm:ss",
            "format": "date-time",
            "example": "2025-04-25T12:00:00"
          }
        },
        "additionalProperties": false,
        "description": "DTO para Agendamento de SMS"
      },
      "AddSchedulerSmsWithTemplateResponseDto": {
        "required": [
          "messageId",
          "schedulerId"
        ],
        "type": "object",
        "properties": {
          "schedulerId": {
            "type": "string",
            "description": "Identificador único do agendamento da mensagem",
            "example": "66fb683c04479e96ca27adea"
          },
          "messageId": {
            "type": "string",
            "description": "Identificador único da mensagem enviada",
            "example": "66fb683c04479e96ca27adea"
          }
        },
        "additionalProperties": false,
        "description": "DTO de resposta ao agendamento de SMS"
      },
      "AddTemplatePushRequestDto": {
        "required": [
          "description",
          "name",
          "template"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Define se o nome do template",
            "example": "Boas vindas"
          },
          "description": {
            "type": "string",
            "description": "Descrição com mais detalhes do template",
            "example": "Push de notificação de marketing para o DM APP"
          },
          "template": {
            "type": "string",
            "description": "Base64 do template push",
            "example": "VGVzdGUgbWVuc2FnZW0gZGUgUHVzaCBwYXJhIHt7Tm9tZX19"
          }
        },
        "additionalProperties": false,
        "description": "DTO para adicionar um template de Push"
      },
      "AddTemplatePushResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Identificador único do novo template",
            "example": "66fb683c04479e96ca27adea"
          }
        },
        "additionalProperties": false
      },
      "AddTemplateSmsRequestDto": {
        "required": [
          "description",
          "name",
          "originId",
          "template",
          "whatsappProvider"
        ],
        "type": "object",
        "properties": {
          "originId": {
            "type": "string",
            "description": "OriginId que pediu a criação do template",
            "example": "670da2467dcaf1e93c1fc2e0"
          },
          "name": {
            "type": "string",
            "description": "Define se o nome do template",
            "example": "boas_vindas"
          },
          "description": {
            "type": "string",
            "description": "Descrição com mais detalhes do template",
            "example": "SMS de boas vindas para os clientes após finalizarem o cadastro"
          },
          "template": {
            "type": "string",
            "description": "Base64 do template sms",
            "example": "T2zDoSB7e05vbWV9fSwgZXNzYSDDqSB1bWEgbWVuc2FnZW0gZGUgdGVzdGUu"
          },
          "whatsappProvider": {
            "type": "string",
            "description": "Nome do provedor de Whatsapp",
            "example": "twilio"
          },
          "placeholders": {
            "type": "object",
            "additionalProperties": {
              "type": "string",
              "nullable": true
            },
            "description": "Informações das variáveis utilizadas pelo template",
            "example": {
              "Nome": "João"
            }
          },
          "category": {
            "type": "string",
            "description": "Informações sobre a categoria do template (AUTHENTICATION, MARKETING, UTILITY)",
            "example": "MARKETING"
          }
        },
        "additionalProperties": false,
        "description": "DTO para adicionar um template de e-mail"
      },
      "AddTemplateSmsResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Identificador único do novo template",
            "example": "66fb683c04479e96ca27adea"
          }
        },
        "additionalProperties": false
      },
      "GetTemplateSmsApprovalStatusResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "reasonType": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "GetTemplateSmsResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "template": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "templatesWhatsappProviders": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string"
          },
          "instance": {
            "type": "string"
          }
        },
        "additionalProperties": { }
      },
      "PushDestinationDto": {
        "required": [
          "type",
          "value"
        ],
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Tipo do destino: customer_id, document ou token",
            "example": "document"
          },
          "value": {
            "type": "string",
            "description": "Valor do destino (CPF para document, ID do cliente para customer_id, token para token)",
            "example": "12345678900"
          }
        },
        "additionalProperties": false,
        "description": "DTO de destino para Push notification"
      },
      "PushDto": {
